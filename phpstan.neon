includes:
    - vendor/larastan/larastan/extension.neon
    - phpstan-baseline.neon

parameters:
    level: 5

    paths:
        - app
        - bootstrap/app.php
        - config
        - database
        - routes

    excludePaths:
        analyse:
            - tests/*
            - storage/*
            - bootstrap/cache/*
            - vendor/*

    treatPhpDocTypesAsCertain: false

    parallel:
        maximumNumberOfProcesses: 4
